.container.mt-4
  %h1 
    = t('activerecord.modules.order.one')
  %div{:id => "#{dom_id order}", style: "background-color: #f5f5f5; padding: 10px; margin-bottom: 10px;"}
    %p{:style => "font-weight: bold; color: #333;"}
      %strong 
        = t('activerecord.attributes.order.name_of_client')
        =" : "
      = order.client.client_name
    %p{:style => "font-weight: bold; color: #333;"}
      %strong 
        = t('activerecord.attributes.client.direction')
        =" : "
      = order.client.direction
    %p{:style => "font-weight: bold; color: #666;"}
      %strong 
        = t('activerecord.attributes.order.name_of_dish')
        =" : "
      = order.dish&.name
    %p{:style => "font-weight: bold; color: #666;"}
      %strong 
        = t('activerecord.attributes.dish.price')
        =" : "
      = order.dish&.price
    %p{:style => "font-weight: bold; color: #888;"}
      %strong 
        = t('activerecord.attributes.order.order_date')
        =" : "
      = order.order_date
    %p{:style => "font-weight: bold; color: #888;"}
      %strong 
        = t('activerecord.attributes.order.status')
        =" : "
      = order.status
  %div
    = link_to t('activerecord.attributes.order.back_to_orders'), orders_path, style: "display: inline-block; padding: 0.5rem 1rem; background-color: #6c757d; color: #fff; text-decoration: none; border-radius: 0.25rem; border: none;"
    |
    = link_to t('application.edit'), edit_order_path(@order), class: "btn btn-success"
    |
    = button_to t('application.delete'), @order, method: :delete, class: "btn btn-danger"
