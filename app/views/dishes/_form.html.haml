= form_with(model: dish) do |f|
  - if dish.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(dish.errors.count, "error")
        prohibited this dish from being saved:
      %ul
        - dish.errors.each do |error|
          %li= error.full_message
  %div
    = f.label :name, style: "display: block"
    = f.text_field :name
  %div
  = f.label :description, style: "display: block"
  = f.text_area :description, value: strip_tags(f.object.description.body.to_s)
  %div
    = f.label :price, style: "display: block"
    = f.number_field :price
  %div
    = f.label :picture, style: "display: block"
    = f.file_field :picture
  .form-group.ml-4.mr-4
    = f.label :status_dish, class: 'form-label required'
    = f.select(:status_dish, options_for_select(status_dishes, @dish.status_dish),
  {prompt:"Seleccione"}, class:'form-control')
  %div
    = f.submit
