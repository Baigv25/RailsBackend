= form_with(model: user) do |form|
  - if user.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :user_name, style: "display: block"
    = form.text_field :user_name
  %div
    = form.label :email, style: "display: block"
    = form.email_field :email
  %div
    = form.label :password, style: "display: block"
    = form.password_field :password
  %div
    = form.label :password_confirmation, style: "display: block"
    = form.password_field :password_confirmation

  .form-group.ml-4.mr-4
    = form.label :user_type, class: 'form-label required'
    = form.select(:user_type, options_for_select(user_types, @user.user_type),
  {prompt:"Seleccione"}, class:'form-control')
  .from-group
    = form.submit