.div.container.my-4.py-4
  %h2 Registrarse
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.form-group
      = f.label :user_name, class: "form-label"
      %br/
      = f.text_field :user_name, autofocus: true, class: "form-control"
    .field.form-group
      = f.label :email, class: "form-label"
      %br/
      = f.email_field :email, autofocus: true, class: "form-control"
    .field.form-group
      = f.label :password, class: "form-label"
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, class: "form-control"
    .field.form-group
      = f.label :password_confirmation, class: "form-label"
      %br/
      = f.password_field :password_confirmation, class: "form-control"
    .form-group.ml-4.mr-4
      = f.label :user_type, class: 'form-label required'
      = f.select(:user_type, options_for_select(user_types, @user.user_type), {prompt:"Seleccione"}, class:'form-control')
    .actions
      = f.submit "Sign up", class: "btn btn-primary"
  = render "devise/shared/links"
