.div.container.my-4.py-4
  = form_with(model: order) do |f|
    - if order.errors.any?
      %div{:style => "color: red"}
        %h2
          = pluralize(order.errors.count, "error")
          prohibited this order from being saved:
        %ul
          - order.errors.each do |error|
            %li= error.full_message

    %div
      = f.label :order_date, style: "display: block"
      = f.date_field :order_date, class: "form-control"

    .form-group.mx-4
      = f.label :client, class: "form-label required"
      .div.w-25
        = f.select(:client_id, options_for_select(@clients, @order.client), {prompt: t('application.select')}, class: "form-control")

    .form-group.mx-4
      = f.label :dish, class: "form-label required"
      .div.w-25
        = f.select(:dish_id, options_for_select(@dishes, @order.dish), {prompt: t('application.select')}, class: "form-control")

    .form-group.ml-4.mr-4
      = f.label :status, class: 'form-label required'
      = f.select(:status, options_for_select(statuses, @order.status), {prompt:"Seleccione"}, class:'form-control')

    %div
      = f.submit class: "btn btn-primary"
